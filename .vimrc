syntax on
filetype plugin indent on

set exrc
set guicursor=
" set relativenumber
set nu
set nohlsearch
" set hidden
set noerrorbells
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set autoindent
set nowrap
set smartcase
set incsearch
set termguicolors
set scrolloff=8
